<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p><i>Created by {{user.name}} on {{format_date date_created}}</i></p>

  <form class="form new-comment-form">
      <div class="form-group">
        <label for="post-desc">Leave a comment:</label>
        <textarea class="form-input" id="post-comment" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
  </form>
</div>
